<div id="userDiv">
	<div id="addimage"><%= link_to 'Add image', '#signIn' %></div>
	<h1><%= @place.name %> </h1>
	<h2><%= @place.address %></h2>
	<%  if @images.size > 0%>
		<% @images.each do |image| %>
			<%= link_to show_image_path(image_id: image.id, place_id: @place.id) do %>
			    <%= image_tag image.image.url(:medium) %>
			<% end %>
		<% end %>
	<% else %>
		<h2>No images</h2>
	<% end %>

	
</div>

<div id="signIn">
<h1>Add new image</h1>

<%= form_for @image, url: add_image_path(place_id: @place.id), :html => { :multipart => true } do |f| %>   
    <p>
      <%= f.text_field :title, placeholder: 'Title' %>
    </p>

    <p>
      <%= f.text_area :description, placeholder: 'Description' %>
    </p>

      <%= f.file_field :image %>
      <p>  
          <%= f.submit 'Add image'%>
      </p>
  <% end %>
<%= link_to "Back", :back %>
</div>
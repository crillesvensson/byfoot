<div id="userDiv">
<h1>Users</h1>

  	<table class="table table-striped">
	  	<th>First name</th>
	  	<th>Last name</th>
	  	<th>Country</th>
	  	<th>City</th>
	  	<th></th>


  		<% @users.each do |user| %>
			<tr>
				<td><%= user.firstname %></td>
				<td><%= user.lastname %></td>
				<td><%= user.country %></td>
				<td><%= user.city %></td>
				<td><%= button_to 'Show', user_path(user), class: 'btn btn-mini btn-primary', method: :get  %></td>
			</tr>
		<% end %>
	</table>
</div>
<div id="userDiv">
	<div class="container-fluid">
  		<div class="row-fluid">
    		<div class="span4">
    			<%= image_tag @user.photo.url, size: "350x350"  %>
    		</div>
    		<div class="span8">	
				<table class="table table-striped">
  
  					<th>User Information</th>
  					<th></th>
					  	<tr>
					    	<th>Name</th>
					    	<td><%= @user.firstname %></td>
					  	</tr>
					  	<tr>
					    	<th>Last name</th>
					    	<td><%= @user.lastname %></td>
					  	</tr>
					    <tr>
					    	<th>E-mail</th>
					    	<td><%= @user.email %></td>
					  	</tr>
					    <tr>
					    	<th>Phone</th>
					    	<td><%= @user.phone %></td>
					  	</tr>
					    <tr>
					    	<th>Birthday</th>
					    	<td><%= @user.birthday %></td>
					  	</tr>
					    <tr>
					    	<th>Country</th>
					   	 	<td><%= @user.country %></td>
					  	</tr>
					  	<tr>
					    	<th>City</th>
					   	 	<td><%= @user.city %></td>
					  	</tr>
					</table>  
    		</div>
  		</div>
  	</div>	

  	<% if @user.id != current_user.id %>
  		<%= link_to 'Places', places_path(id: @user.id), class: 'btn btn-mini btn-primary', method: :get  %>
  		<%= link_to 'Send message', new_message_path(id: @user.id), class: 'btn btn-mini btn-primary', method: :get  %>
  		<% if current_user.friendships.find_by(friend_id: @user.id).blank? %>
  			<%= link_to 'Add friend', friendships_path(friend_id: @user.id), class: 'btn btn-mini btn-primary', method: :post  %>
  		<% else %>
  			<p>Friends</p>
  		<% end %>
  	<% end %>
	
</div>